{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source=Data/MyCourse.db"
  },
  "Courses": {
    "PerPage": 10,
    "InHome": 3,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": [
        "Id",
        "Title",
        "Rating",
        "CurrentPrice"
      ]
    }
  },
  "DistributedCache": {
    "Redis": {
      "Configuration": "localhost",
      "InstanceName": "MyCourseRedisCache"
    },
    "SqlServer": {
      "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDb;Integrated Security=True",
      "SchemaName": "dbo",
      "TableName": "MyCourseSqlCache"
    }
  },
  "MemoryCache": {
    "SizeLimit": 1000
  },
  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Client",
      "VaryByQueryKeys": [
        "page"
      ]
    }
  }
}