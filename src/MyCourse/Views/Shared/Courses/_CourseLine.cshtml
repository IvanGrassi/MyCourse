<!--Rappresenta una riga all'interno di un elenco dei corsi-->
@model CourseViewModel



  <div class="col-12 col-sm-8 col-md-6 col-lg-4 cards-align">
    <div class="card card-dimensions">
      <img class="card-img" src="@Model.ImagePath">
      <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <h6 class="card-subtitle sub-author">Di @Model.Author</h6>
      <div class="card-subtitle rating " title="@Model.Rating">  
        <rating value="@Model.Rating"></rating> 
      </div>
      <div class="buy d-flex justify-content-between align-items-center">
        <div class="price text-success"><h5 class="mt-4">@Model.CurrentPrice</h5></div>
        <div class="price text-danger oldPrice"><h5 class="mt-4">@Model.FullPrice</h5></div>
      </div>
        <a class="btn btn-outline-primary mt-1 detailBtn" asp-controller="Courses" asp-action="Detail" asp-route-id="@Model.Id">Dettaglio</a>
      </div>
    </div>
  </div>