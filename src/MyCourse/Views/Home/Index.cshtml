@model HomeViewModel //fortemente tipizzata

<!--b-jumbotron-->
<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <!--Di solito va messa una reason why qui: (perchÃ© gli utenti dovrebbero navigare nel sito?)-->
    <p class="lead">Impara in maniera faicle e divertente con i nostri corsi online!<br>
    Scegli da un vasto catalogo sempre a tua disposizione</p>
    <hr class="my-4">
    <!--Call to action: bottone che se cliccato richiama il CoursesController e l'azione Index (carica tutti i corsi) -->
    <p><a asp-controller="Courses" asp-action="Index" class="btn btn-primary">Sfoglia il catalogo dei corsi <i class="fas fa-angle-right"></i></a></p>
</div>

<section>
    <h2 class="head-home-h2">Aggiunti di recente</h2>
    @foreach(CourseViewModel course in Model.MostRecentCourses)
    {   //qua mettiamo il collegamento alla partial view (_CourseLine.cshtml)
        
        <partial name="Courses/_CourseLine" model="@course"></partial>
    }
</section>    

<section>
    <h2 class="head-home-h2">I migliori di sempre</h2>
    @foreach(CourseViewModel course in Model.BestRatingCourses)
    {
        <partial name="Courses/_CourseLine" model="@course"></partial>
    }
</section>